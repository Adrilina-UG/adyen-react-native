{
  "name": "@adyen/react-native",
  "version": "0.1.0",
  "description": "Wrapps Adyen Checkout SDKs for iOS and Android for convinient use on React Native.",
  "license": "MIT",
  "author": "Adyen",
  "homepage": "https://adyen.com",
  "repository": "https://github.com/Adyen/adyen-react-native",
  "keywords": [
        "adyen",
        "adyen-ios",
        "adyen-android",
        "checkout",
        "payment",
        "payments",
        "components"
  ],
  "main": "src/AdyenCheckoutContext.js",
  "files": [
    "src",
    "android",
    "ios",
    "adyen-react-native.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  },
  "devDependencies": {
    "react": "^16.13.1",
    "react-native": "^0.63.4",
    "react-native-builder-bob": "^0.18.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "release-it": "^14.2.2",
    "eslint": "^7.2.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module"
    ]
  }
}
