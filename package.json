{
  "name": "@adyen/react-native",
  "version": "1.0.0",
  "description": "Wrapps Adyen Checkout SDKs for iOS and Android for convinient use on React Native.",
  "license": "MIT",
  "author": "Adyen",
  "homepage": "https://adyen.com",
  "repository": "https://github.com/Adyen/adyen-react-native",
  "keywords": [
    "adyen",
    "adyen-ios",
    "adyen-android",
    "checkout",
    "payment",
    "payments",
    "components"
  ],
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "react-native": "src/index",
  "source": "src/index",
  "bugs": {
     "url": "https://support.adyen.com/"
  },
  "files": [
    "src",
    "android",
    "ios",
    "adyen-react-native.podspec",
    "LICENSE",
    "README",
    "!android/build",
    "!ios/build",
    "!**/__tests__"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "run-ios": "yarn example && cd example && yarn ios",
    "run-android": "yarn example && cd example && yarn android",
    "bootstrap": "git clean -fxd && yarn"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  },
  "devDependencies": {
    "react": "^17.0.2",
    "react-native": "^0.66.4",
    "@react-native-community/eslint-config": "^2.0.0",
    "react-native-builder-bob": "^0.18.2",
    "pod-install": "^0.1.30",
    "prettier": "^2.0.5",
    "release-it": "^14.2.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "react-hooks"
    ],
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
