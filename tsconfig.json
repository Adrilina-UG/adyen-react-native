{
  "include": [ "src/**/*" ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "typeRoots": [ "./" ],                                  
    "allowJs": true,                                  
    "checkJs": false,                                  
    "declaration": true,                              
    "declarationMap": true,                           
    "emitDeclarationOnly": true,                      
    "outDir": "./lib/types",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
